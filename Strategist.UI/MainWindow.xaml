<Window x:Class="Strategist.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"    
        Title="MainWindow" 
        Height="450" Width="800"
        MinHeight="200" MinWidth="800"
        Loaded="Window_Loaded">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" MaxWidth="250"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        
        <!-- Left Side -->
        <Grid Margin="5">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Label Grid.Row="0" Content="Список средств защиты:"/>
            <ListBox Grid.Row="1"
                     ItemsSource="{Binding Matrix.Columns}"
                     Background="WhiteSmoke">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <CheckBox Content="{Binding Header}" 
                                  IsChecked="{Binding Enabled}"
                                  Click="ColumnCheckBox_Click"/>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

            <Label Grid.Row="2" Content="Список угроз:"/>
            <ListBox Grid.Row="3"
                     ItemsSource="{Binding Matrix.Rows}"
                     Background="WhiteSmoke">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <CheckBox Content="{Binding Header}" 
                                  IsChecked="{Binding Enabled}"
                                  Click="RowCheckBox_Click"/>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Grid>

        <!-- Right Side -->
        <Grid Grid.Column="1" Margin="0,5,5,5">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <DataGrid Grid.Row="0"
                      x:Name="dataGrid" 
                      IsReadOnly="True"
                      ColumnWidth="*"
                      CanUserResizeColumns="False"
                      CanUserResizeRows="False"
                      CanUserReorderColumns="False"
                      ItemsSource="{Binding MatrixAsDataTable}" 
                      Margin="0,0,0,5" 
                      HeadersVisibility="Column">
            </DataGrid>
            <StackPanel Grid.Row="1" 
                        Orientation="Vertical">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Label Grid.Column="0" Content="Минимальная вероятность защиты:"/>
                    <TextBox Grid.Column="1"
                         x:Name="thresholdTextBox"
                         Padding="0 4 0 0"/>
                    <Button Grid.Column="2"
                        Content="Рассчитать"
                        Margin="5,0,0,0"
                        Padding="10 0"
                        Click="ButtonProbability_Click"/>
                </Grid>
                <Button Content="Найти науличшее решение"
                        Margin="0,5,0,0"
                        Padding="0 4"
                        Click="ButtonBest_Click"/>
            </StackPanel>
        </Grid>

    </Grid>
</Window>
